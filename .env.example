# Variáveis de Ambiente para Docker Compose

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_segura
POSTGRES_DB=postgres
PGDATA=/var/lib/postgresql/data

# Segurança - Chave única para todas as funções de criptografia
ENCRYPTION_SECRET=sua_chave_secreta_longa_e_aleatoria

# Banco de dados para Typebot
TYPEBOT_DATABASE_URL=postgresql://postgres:sua_senha_segura@postgres16:5432/typebot

# Typebot URLs e portas
NEXTAUTH_URL=https://typebot.seu-dominio.com
NEXT_PUBLIC_VIEWER_URL=https://bot.seu-dominio.com
BUILDER_PORT=9090
VIEWER_PORT=9091

# Admin
ADMIN_EMAIL=seu-email@exemplo.com
ADMIN_PASSWORD=sua_senha_segura_admin
DISABLE_SIGNUP=true

# Autenticação GitHub para Typebot (opcional)
GITHUB_ID=seu_github_id
GITHUB_SECRET=seu_github_secret

# SMTP - Configuração de email
SMTP_USERNAME=seu_usuario_smtp
SMTP_PASSWORD=sua_senha_smtp
SMTP_HOST=seu_host_smtp
SMTP_PORT=587
SMTP_SECURE=false
SMTP_AUTH_DISABLED=false
NEXT_PUBLIC_SMTP_FROM=no-reply@seu-dominio.com

# S3 / MinIO
S3_ACCESS_KEY=sua_chave_de_acesso_s3
S3_SECRET_KEY=sua_chave_secreta_s3
S3_BUCKET=typebot
S3_ENDPOINT=minio

# MinIO Admin
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=sua_senha_segura
MINIO_BROWSER_REDIRECT_URL=https://minios3.seu-dominio.com
MINIO_SERVER_URL=https://s3.seu-dominio.com

# Evolution API
EVOLUTION_API_KEY=sua_chave_api_evolution
WEBHOOK_URL=https://evolutionapi.seu-dominio.com
EVOLUTION_DATABASE_URL=postgresql://postgres:sua_senha_segura@postgres16:5432/evolutionapi
